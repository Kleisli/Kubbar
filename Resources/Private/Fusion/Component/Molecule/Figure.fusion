prototype(Kleisli.Kubbar:Component.Molecule.Figure) < prototype(Neos.Fusion:Component) {

  class = false
  image = Kleisli.Kubbar:Component.Image
  withCaption = true
  caption = ''

  renderer = afx`
    <figure class={props.class}>
      {props.image}
      <figcaption @if.showCaption={props.withCaption}>
        {props.caption}
      </figcaption>
    </figure>
  `
}

