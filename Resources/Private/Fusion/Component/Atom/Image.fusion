prototype(Kleisli.Kubbar:Component.Atom.Image) < prototype(Neos.Fusion:Component) {

    asset = null

    resourcePackage = false
    resourcePath = null

    uri = null

    srcset = null
    sizes = null
    alt = null
    title = null
    loading = 'lazy'
    width = null
    height = null
    format = null
    attributes = Neos.Fusion:DataStructure
    renderDimensionAttributes = true

    renderer = Sitegeist.Kaleidoscope:Image {
        @apply.props = ${props}
        imageSource = Neos.Fusion:Case {
            asset {
                condition = ${props.asset}
                renderer = Sitegeist.Kaleidoscope:AssetImageSource {
                    asset = ${props.asset}
                }
            }

            resource {
                condition = ${props.resourcePath}
                renderer = Sitegeist.Kaleidoscope:ResourceImageSource {
                    path = ${props.resourcePath}
                    package = ${props.resourcePackage}
                }
            }

            uri {
                condition = ${props.uri}
                renderer = Sitegeist.Kaleidoscope:UriImageSource {
                    uri = ${props.uri}
                }
            }

            dummy {
                condition = true
                renderer = Sitegeist.Kaleidoscope:DummyImageSource
            }
        }
    }
}
